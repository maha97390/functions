#include<stdio.h>
#include<conio.h>
#include<string.h>
int main()
{
    int arr1[2][4]={{1,2,3,4},{5,6,7,8}};
    int arr2[2][4]={{5,6,7,8},{1,2,3,4}};
    addarray(arr1,arr2);
    return 0;
}
int addarray(int a[2][4],int b[2][4])
{
    int c[2][4];
    for(int i=0;i<2;i++)
    {
        for(int j=0;j<4;j++)
        {

            c[i][j]=a[i][j]+b[i][j];
        }
    }
    printf("\nAddition of matrix is:\n");
    for(int i=0;i<2;i++)
    {
        for(int j=0;j<4;j++)
        {
        printf("  %d",c[i][j]);
        }
        printf("\n");
    }

}
