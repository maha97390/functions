#include<stdio.h>
void main()
{
    int a;
    printf("Enter any number:");
    scanf("%d",&a);
    printf("The maximum number is:%d",conv(a));
}
void conv(int n)
{
    int b[10];
    for(int i=0;n>0;i++)
    {
        b[i]=n%10;
        n=n/10;
    }
    max(b);
}
int max(int a[10])
{
    for(int i=1;i<4;i++)
    {
        a[0]=a[0]>a[i]?a[0]:a[i];
    }
    return a[0];
}
